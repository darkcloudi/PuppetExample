<assembly>
     <id>puppet</id>
    <!-- <includeBaseDirectory>false</includeBaseDirectory> -->
    <!-- <useProjectArtifact>false</useProjectArtifact>  -->
    <formats>
        <format>tar.gz</format>
    </formats>

    <dependencySets>
        <dependencySet>   
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>${project.groupId}:*:war:${project.version}</include>
                <!--  <include>com.sam:myWebApp</include> -->
            </includes>
            <outputDirectory>files</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
     
    </dependencySets>
  
